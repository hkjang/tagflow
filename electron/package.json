{
  "name": "@tagflow/electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "electron .",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.tagflow.app",
    "productName": "TagFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../frontend/out",
        "to": "frontend"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
