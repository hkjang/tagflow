{
  "name": "tagflow",
  "version": "1.0.0",
  "description": "RFID Tag Management System with Electron, NestJS, and Next.js",
  "private": true,
  "workspaces": [
    "nwjs",
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:nwjs\"",
    "dev:backend": "npm --workspace=backend run start:dev",
    "dev:frontend": "npm --workspace=frontend run dev",
    "dev:nwjs": "npm --workspace=nwjs run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --workspace=backend run build",
    "build:frontend": "npm --workspace=frontend run build",
    "build:exe": "npm run build && npm --workspace=nwjs run build",
    "start": "npm --workspace=nwjs run dev",
    "migrate": "npm --workspace=backend run migrate",
    "seed": "npm --workspace=backend run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
